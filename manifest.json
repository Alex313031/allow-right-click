{
  "manifest_version": 2,
  "version": "0.1.0",
  "name": "Allow Right-Click",
  "description": "Re-enable the possibility to use the context menu on sites that overrides it",

  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png"
  },

  "permissions": [
    "storage",
    "*://*/*"
  ],

  "browser_action": {
    "default_title": "Click on this button to unblock browser's context menu if it is blocked",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },

  "homepage_url": "http://add0n.com/allow-right-click.html",

  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  }
}
